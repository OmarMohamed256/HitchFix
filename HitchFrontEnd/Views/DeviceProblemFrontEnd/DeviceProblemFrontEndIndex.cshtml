@model IEnumerable<HitchFrontEnd.Models.DeviceProblemDto>
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h2>Which part is malfunctioning?</h2>
        <p class="">Whichever part you choose, we've got you covered!</p>
        <form asp-action="SendToRegister" class="row">
            @foreach (var problem in Model)
            {
                    <div class="col">
                         <label>
                        <input type="checkbox" name="problem_data" value='{ "Id": "@problem.Id", "ProblemName": "@problem.ProblemName"
                        , "Price": "@problem.Price", "DiscountPrice": "@problem.DiscountPrice", "TotalPriceAfterDiscount": "@problem.TotalPriceAfterDiscount"}'>
                        <h4 class="border rounded p-4">@problem.ProblemName</h4>
                         </label>
                        </div>
            }
            <input type="submit" value="Continue" class="btn btn-primary form-control m-2" />
        </form>
    </div>
</div>
